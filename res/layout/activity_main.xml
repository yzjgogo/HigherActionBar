<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kop.higheractionbar.MainActivity" >

    <Button 
        android:id="@+id/bt_custom_abTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="跳转到自定义ActionBar主题页面"/>
    <Button 
        android:id="@+id/bt_custom_abTextColor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="跳转到自定义ActionBar文本颜色页面，包含ActionBar Tab的实现及自定义"/>
    <Button 
        android:id="@+id/bt_actonbar_voerlay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ActionBar覆盖Activity的模式(ActionBar在Activity的上面)"/>

</LinearLayout>
